# =============================================================================
# PhysioFlow EMR - Environment Configuration
# =============================================================================
# Copy this file to .env and adjust values as needed

# Application Ports
WEB_PORT=7010
API_PORT=7011
POSTGRES_PORT=7012
REDIS_PORT=7013
KEYCLOAK_PORT=7014
MINIO_API_PORT=7015
MINIO_CONSOLE_PORT=7016
MEILISEARCH_PORT=7017

# PostgreSQL
POSTGRES_USER=emr
POSTGRES_PASSWORD=emr_secret
POSTGRES_DB=physioflow
KEYCLOAK_DB=keycloak

# Keycloak
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin_secret
KEYCLOAK_API_CLIENT_SECRET=physioflow-api-secret

# MinIO
MINIO_ROOT_USER=minio_admin
MINIO_ROOT_PASSWORD=minio_secret

# Meilisearch
MEILI_MASTER_KEY=meili_master_key_dev

# Application URLs (for Keycloak redirects)
PHYSIOFLOW_WEB_URL=http://localhost:7010
